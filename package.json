{
  "name": "leet-nudge",
  "displayName": "Leet nudge",
  "version": "0.0.1",
  "description": "Get helpful hints while solving LeetCode problems without spoiling the solution",
  "author": "Krunal Darekar <krunaldarekar29@gmail.com>",
  "scripts": {
    "compile-scripts": "tsc -p tsconfig.scripts.json",
    "dev": "npm run compile-scripts && plasmo dev",
    "build": "npm run compile-scripts && plasmo build && cp -r build/chrome-mv3-dev/scripts build/chrome-mv3-prod/scripts",
    "package": "plasmo package"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.17",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://leetcode.com/*",
      "http://localhost:3000/*"
    ],
    "permissions": [
      "activeTab"
    ],
    "web_accessible_resources": [
      {
        "resources": ["scripts/inject-monaco-reader.js", "style.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }
}
